<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    style="@style/fill"
    android:padding="20dp"
    >

    <TextView
        android:id="@+id/text1"
        style="@style/wrap"
        android:textSize="18sp"
        android:textColor="#ccc"
        android:text="List of products for purchase"
        android:layout_alignParentTop="true"
        />
    <LinearLayout
        android:id="@+id/products"
        style="@style/wide"
        android:layout_below="@id/text1"
        android:orientation="vertical"
        />
    <TextView
        android:id="@+id/text2"
        style="@style/wrap"
        android:textSize="18sp"
        android:textColor="#ccc"
        android:text="List of all owned products"
        android:layout_below="@id/products"
        />
    <ListView
        android:id="@+id/receipts"
        style="@style/wrap"
        android:layout_below="@+id/text2"
        />
    <Button
        android:id="@+id/gamer_uuid_button"
        style="@style/wrap"
        android:text="Request Gamer UUID"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        />
</RelativeLayout>

